<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.solfood.owner.login.OwnerLoginMapper">

    <!--점주 회원 가입-->
    <insert id="register" parameterType="kr.co.solfood.owner.login.OwnerVO">
        INSERT INTO owner (
            owner_email,
            owner_pwd,
            owner_tel,
            owner_status
        )
        VALUES (
                   #{ownerEmail},
                   #{ownerPwd},
                   #{ownerTel},
                   #{ownerStatus}
               )
    </insert>

    <!--점주 로그인-->
    <select id="login" parameterType="kr.co.solfood.owner.login.OwnerVO" resultType="kr.co.solfood.owner.login.OwnerVO">
        SELECT *
        FROM owner
        WHERE owner_email = #{ownerEmail} AND owner_pwd =#{ownerPwd}
    </select>

</mapper>