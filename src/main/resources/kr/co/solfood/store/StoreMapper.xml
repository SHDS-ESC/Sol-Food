<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.solfood.store.StoreMapper">

   <!-- 전체 목록 조회 -->
    <select id="selectAllStore" resultType="kr.co.solfood.store.StoreVO">
        SELECT store_name, store_category, store_avgstar
        FROM store
    </select>

    <!-- 카테고리별 조회 -->
    <select id="selectCategoryStore" resultType="kr.co.solfood.store.StoreVO">
        SELECT store_name, store_category, store_avgstar
        FROM store
        WHERE store_category = #{category}
    </select>

</mapper>